@model IEnumerable<WebApplication1.Models.Event>
@{
    ViewData["Title"] = "My Events";
}

<h1>My Events</h1>

<a asp-controller="Event" asp-action="AddEvent" class="btn btn-primary mb-3">Add Event</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Location</th>
            <th>Seats Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Name</td>
                <td>@ev.EventDate.ToShortDateString()</td>
                <td>@ev.Location</td>
                <td>@ev.SeatsAvailable</td>
                <td>
                    <a asp-action="EditEvent" asp-route-id="@ev.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteEvent" asp-route-id="@ev.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

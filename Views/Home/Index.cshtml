@{
    ViewData["Title"] = "Home - PlanSphere";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="PlanSphere: Your All-in-One Event Management Hub" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons CSS -->
<link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <style>

        /* Feature Icons */
        .feature-icon {
            font-size: 4rem;
            color: #007bff;
        }

        /* Stats Counter Animation */
        .counter {
            font-size: 3rem;
            font-weight: bold;
        }

        .bg-primary-custom {
            background-color: cadetblue; /* Or any shade of blue you prefer */
        }

        /* Card Hover Effect */
        .card:hover {
            transform: translateY(-10px);
            transition: transform 0.3s ease-in-out;
        }

        /* Quote Styling */
        .quote-section {
            background-color: #f8f9fa;
            border-left: 5px solid #007bff;
            padding: 30px;
            margin-top: 50px;
        }

        .quote-text {
            font-size: 1.5rem;
            font-style: italic;
        }

        .quote-author {
            font-size: 1.2rem;
            text-align: right;
            color: #007bff;
        }
    </style>
</head>
<body>
   
    <!-- Hero Section -->
    <div class="bg-light text-center py-5" style="margin-top: 80px">
        <div class="container">
            <h1 class="display-4 text-animation">Welcome to PlanSphere</h1>
            <p class="lead">Your All-in-One Event Management Hub</p>
        </div>
    </div>

    <!-- Quotation Section -->
    <div class="quote-section text-center">
        <p class="quote-text">“A goal without a plan is just a wish.”</p>
        <p class="quote-author">- Antoine de Saint-Exupéry</p>
    </div>

    <!-- Features Section -->
    <div class="container py-5">
        <h2 class="text-center mb-4">Our Features</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="card p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                    <h5>Create Events</h5>
                    <p>Easily create and manage events with intuitive tools.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-person-plus"></i>
                    </div>
                    <h5>Real-Time Updates</h5>
                    <p>Track event availability and registrations in real-time.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-bar-chart-line"></i>
                    </div>
                    <h5>Feedback Collection</h5>
                    <p>Gather feedback and ratings to improve future events.</p>
                </div>
            </div>
        </div>
    </div>

